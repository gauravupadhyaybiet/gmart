
<% layout("/layouts/boilerplate") %>

<div class="container py-5">

<h1 class="text-center fw-bold mb-5 text-primary">
✨ Welcome to G-mart ✨
</h1>

<h2 class="mb-4 fw-bold">Products</h2>

<div class="row g-4">

<% if(showproducts && showproducts.length){ %>

<% showproducts.forEach(product=>{ %>

<div class="col-lg-3 col-md-4 col-sm-6">

<div class="amazon-card h-100">

<div class="amazon-img-box">
<img src="<%= product.image %>" alt="<%= product.name %>">
</div>

<div class="p-3 d-flex flex-column">

<div class="amazon-title">
<%= product.name %>
</div>

<% if(product.amount){ %>
<div class="amazon-price mt-1">
₹<%= product.amount %>
</div>
<% } %>

<form method="GET"
action="/product/<%= product._id %>/show"
class="mt-auto">

<button class="btn amazon-btn w-100 mt-3">
View Details
</button>

</form>

</div>

</div>

</div>

<% }) %>

<% } else { %>

<div class="text-center mt-5">
<h5 class="text-muted">No products available</h5>
</div>

<% } %>

</div>

</div>








