
<% layout("/layouts/boilerplate") %>

<h1 class="text-center fw-bold mt-5 text-primary">
✨ Welcome to G-mart ✨
</h1>

<h2 class="mt-4 mb-4 fw-bold">Products</h2>

<div class="row g-4">

<% if(showproducts && showproducts.length){ %>

<% showproducts.forEach(product=>{ %>

<div class="col-lg-3 col-md-4 col-sm-6">

<div class="amazon-card h-100">

<div class="amazon-img-box">
<img src="<%= product.image %>" alt="<%= product.name %>">
</div>

<div class="p-3 d-flex flex-column">

<div class="amazon-title">
<%= product.name %>
</div>

<% if(product.amount){ %>
<div class="amazon-price mt-1">
₹<%= product.amount %>
</div>
<% } %>

<form method="GET"
action="/product/<%= product._id %>/show"
class="mt-auto">

<button class="btn btn-warning w-100 mt-3">
View Details
</button>

</form>

</div>

</div>

</div>

<% }) %>

<% } %>

</div>



<style>

.amazon-card{
background:white;
border:1px solid #e6e6e6;
border-radius:8px;
transition:.25s;
overflow:hidden;
}

.amazon-card:hover{
box-shadow:0 6px 20px rgba(0,0,0,0.15);
transform:translateY(-3px);
}

.amazon-img-box{
height:200px;
display:flex;
align-items:center;
justify-content:center;
padding:15px;
background:white;
border-bottom:1px solid #eee;
}

.amazon-img-box img{
max-width:100%;
max-height:100%;
object-fit:contain;
}

.amazon-title{
font-size:15px;
font-weight:500;
height:42px;
overflow:hidden;
}

.amazon-price{
color:#B12704;
font-size:20px;
font-weight:700;
}

</style>









