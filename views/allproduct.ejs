<% layout("/layouts/boilerplate") %>

<div class="container py-5">

<h2 class="mb-4 fw-bold">Results</h2>

<div class="row g-4">

<% if(showproducts && showproducts.length){ %>

<% showproducts.forEach(product=>{ %>

<div class="col-lg-3 col-md-4 col-sm-6">

<div class="amazon-card h-100">

<!-- IMAGE BOX -->
<div class="amazon-img-box">
<img src="<%= product.image %>" alt="<%= product.name %>">
</div>

<div class="p-3 d-flex flex-column">

<div class="amazon-title">
<%= product.name %>
</div>

<!-- PRICE (if exists) -->
<% if(product.amount){ %>
<div class="amazon-price mt-1">
â‚¹<%= product.amount %>
</div>
<% } %>

<form method="GET"
action="/product/<%= product._id %>/show"
class="mt-auto">

<button class="btn amazon-btn w-100 mt-3">
View Details
</button>

</form>

</div>

</div>

</div>

<% }) %>

<% } else { %>

<div class="text-center mt-5">
<h5 class="text-muted">No products available</h5>
</div>

<% } %>

</div>
</div>



<style>

/* AMAZON CARD */

.amazon-card{
background:white;
border:1px solid #e6e6e6;
border-radius:8px;
transition:.25s;
display:flex;
flex-direction:column;
}

.amazon-card:hover{
box-shadow:0 6px 20px rgba(0,0,0,0.15);
transform:translateY(-3px);
}

/* IMAGE BOX */

.amazon-img-box{
height:230px;
display:flex;
align-items:center;
justify-content:center;
padding:20px;
border-bottom:1px solid #eee;
background:white;
}

.amazon-img-box img{
max-width:100%;
max-height:100%;
object-fit:contain;
}

/* TITLE */

.amazon-title{
font-size:15px;
font-weight:500;
line-height:1.3;
height:42px;
overflow:hidden;
}

/* PRICE */

.amazon-price{
color:#B12704;
font-size:20px;
font-weight:700;
}

/* AMAZON BUTTON */

.amazon-btn{
background:#FFD814;
border:none;
font-weight:600;
}

.amazon-btn:hover{
background:#F7CA00;
}

/* PAGE BG */

body{
background:#f3f3f3;
}

</style>








