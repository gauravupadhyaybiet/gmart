<!-- views/addProduct.ejs -->
<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <h1 class="mb-4">Add New Product</h1>

  <form action="/addproduct" method="POST" class="card p-4 shadow-sm">
    <!-- Basic Information -->
    <div class="mb-4">
      <h4 class="mb-3">Basic Information</h4>
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Product Name</label>
          <input type="text" name="name" required class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">Category</label>
          <input type="text" name="category" required class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">Price</label>
          <input type="number" name="amount" required min="0" step="0.01" class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">Stock</label>
          <input type="number" name="stock" required min="0" class="form-control">
        </div>
      </div>
    </div>

    <!-- Description -->
    <div class="mb-4">
      <h4 class="mb-3">Description</h4>
      <label class="form-label">Product Description</label>
      <textarea name="description" rows="4" required class="form-control"></textarea>
    </div>

    <!-- Image -->
    <div class="mb-4">
      <h4 class="mb-3">Image</h4>
      <label class="form-label">Image URL</label>
      <input type="url" name="image" required class="form-control">
    </div>

    <!-- Marketing Features -->
    <div class="mb-4">
      <h4 class="mb-3">Marketing Features</h4>
      <div class="row g-3">
        <div class="col-md-6 form-check">
          <input type="checkbox" class="form-check-input" name="isFlashSale" id="isFlashSale">
          <label for="isFlashSale" class="form-check-label">Flash Sale</label>
        </div>
        <div class="col-md-6">
          <label class="form-label">Discount (%)</label>
          <input type="number" name="discount" min="0" max="100" class="form-control">
        </div>
        <div class="col-md-6 form-check">
          <input type="checkbox" class="form-check-input" name="isTrending" id="isTrending">
          <label for="isTrending" class="form-check-label">Trending Product</label>
        </div>
    
        <div class="col-md-6">
          <label class="form-label">Season</label>
          <select name="season" class="form-select">
            <option value="">None</option>
            <option value="spring">Spring</option>
            <option value="summer">Summer</option>
            <option value="fall">Fall</option>
            <option value="winter">Winter</option>
          </select>
        </div>
      </div>
    </div>

    

    <!-- Submit Button -->
    <div class="text-end">
      <button type="submit" class="btn btn-primary px-4">Create Product</button>
    </div>
  </form>
</div>



