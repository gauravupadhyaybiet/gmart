<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      padding: 20px;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    .cart-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    .cart-item {
      flex: 1 1 calc(33.333% - 20px);
      max-width: calc(33.333% - 20px);
      box-sizing: border-box;
      margin-bottom: 20px;
    }
    .card {
      margin-bottom: 10px;
      border: 1px solid #dee2e6;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card img {
      height: 200px;
      object-fit: cover;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }
    .card-body {
      padding: 15px;
    }
    .card-title {
      margin-bottom: 10px;
    }
    .price {
      font-size: 1.2em;
    }
    .discounted {
      color: #28a745;
      font-weight: bold;
    }
    .original {
      text-decoration: line-through;
      color: #888;
      margin-left: 5px;
    }
    .btn-primary {
      background-color: #007bff;
      border: none;
      margin-right: 10px;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .btn-danger {
      background-color: #dc3545;
      border: none;
      width: 100%;
    }
    .btn-danger:hover {
      background-color: #bd2130;
    }
    .pay-now {
      display: inline-block;
      margin-top: 10px;
    }
    .empty-cart {
      text-align: center;
      font-size: 1.5em;
      color: #6c757d;
      margin-top: 40px;
    }
  </style>
</head>
<body>
  <h1>Your Cart</h1>
  <% if (cartItems.length > 0) { %>
    <div class="cart-container">
      <% cartItems.forEach(item => { 
          let discountedPrice = item.productId.discount && item.productId.discount > 0
            ? item.productId.amount - (item.productId.amount * item.productId.discount / 100)
            : item.productId.amount;
          let totalPrice = discountedPrice * item.quantity;
      %>
        <div class="cart-item">
          <div class="card" style="width: 100%;">
            <img src="<%= item.productId.image %>" class="card-img-top" alt="<%= item.productId.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= item.productId.name %></h5>
              <p class="price">
                <span class="discounted">₹<%= totalPrice %></span>
                <% if(item.productId.discount && item.productId.discount > 0) { %>
                  <span class="original">₹<%= item.productId.amount * item.quantity %></span>
                  <span class="badge bg-warning text-dark ms-2"><%= item.productId.discount %>% OFF</span>
                <% } %>
              </p>
              <button class="btn btn-primary pay-now" 
                  data-amount="<%= totalPrice %>" 
                  data-product-name="<%= item.productId.name.replace(/'/g, '\\\'') %>">
                  Pay Now
              </button>
            </div>
          </div>
          <form method="POST" action="/cart/<%= item._id %>/delete?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="empty-cart">Your cart is empty.</p>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    function payNow(amount, productName) {
      fetch('/order', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ amount: amount })
      })
      .then(response => response.json())
      .then(order => {
        const options = {
          key: 'rzp_test_tf9CPdWCcLlH39', // Razorpay key
          amount: order.amount,
          currency: order.currency,
          name: productName,
          order_id: order.id,
          handler: function (response) {
            fetch('/verifypayment', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                order_id: order.id,
                payment_id: response.razorpay_payment_id,
                signature: response.razorpay_signature
              })
            })
            .then(res => res.text())
            .then(data => {
              alert(data);
            });
          },
          prefill: {
            name: 'Your Name',
            email: 'your.email@example.com',
            contact: '9999999999'
          },
          theme: {
            color: '#F37254'
          }
        };
        const rzp = new Razorpay(options);
        rzp.open();
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }

    document.querySelectorAll('.pay-now').forEach(button => {
      button.addEventListener('click', function() {
        const amount = this.getAttribute('data-amount');
        const productName = this.getAttribute('data-product-name');
        payNow(amount, productName);
      });
    });
  </script>
</body>
</html>



