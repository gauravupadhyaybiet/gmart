<% layout("/layouts/boilerplate") %>

<body>
  <div class="container my-4">
    <h2 class="mb-4 text-center">Shop by Categories</h2>

    <% if (categories && categories.length) { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% categories.forEach(category => { %>
          <div class="col">
            <div class="card shadow-sm h-100 border-0 category-card text-center">
              <div class="card-body d-flex flex-column justify-content-center">
                <i class="bi bi-tags-fill fs-1 text-primary mb-3"></i>
                <h5 class="card-title text-capitalize"><%= category %></h5>
                <p class="card-text text-muted">
                  Explore the best <%= category %> products at G-Mart.
                </p>
                <a href="/products/<%= category %>" class="btn btn-outline-primary mt-auto">
                  Browse <%= category %>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No categories available yet. Add a product to create categories.</p>
    <% } %>
  </div>

  <style>
    .category-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
    }
  </style>
</body>

